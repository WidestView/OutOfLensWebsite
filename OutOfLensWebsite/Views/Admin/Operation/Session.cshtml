@using OutOfLensWebsite.Models.Data
@model OutOfLensWebsite.Models.Data.Session

@{
    ViewData["Title"] = "Session";
    Layout = "_AdminLayout";
}

<div id="content" style="width:100%">

    <div class="container-fluid">


        @await Html.PartialAsync("_Start.cshtml")

        <div class="row d-flex justify-content-center mb-4" style="margin-top:3rem;">

            <div class="col-3">

                <h5 class="text-center my-3"> Registro de Sessão </h5>

            </div>

        </div>

        <div class="row d-flex justify-content-center">

            @using (Html.BeginForm("AddSession", "Admin", FormMethod.Post, new
                {
                    @class = "text-justify col-10"
                }))
            {

                var connection = new DatabaseConnection();

                <div class="form-row justify-content-center">

                    <div class="form-group col-md-3 col-sm-12">
            
                        @Html.LabelFor(x => x.Order.Identifier, "Pedido")
                        @Html.DropDownListFor(x => x.Order.Identifier,
                            Order.ListItems(connection), new
                            {
                                @class = "form-control"
                            })
                    </div>
                    
                    <div class="form-group col-md-4 col-sm-12">
                        
                        @* @Html.LabelFor(x => x.~, "~") *@
                        @* @Html.TextBoxFor(x => x.~, new { @class = "form-control"}) *@
                        
                        @Html.LabelFor(x => x.Address, "Endereço")
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control"})
                        
                    </div>
                    
                    <div class="form-group col-md-2">
                        @Html.LabelFor(x => x.StartTime, "Horário de Inicio")
                        @Html.TextBoxFor(x => x.StartTime, new
                        {
                            @class = "form-control",
                            type = "time"
                        })
                    </div>
                    <div class="form-group col-md-2">
                        
                        @Html.LabelFor(x => x.EndTime, "Horário de Fim")
                        @Html.TextBoxFor(x => x.EndTime, new
                        {
                            @class = "form-control",
                            type = "time"
                        })
                    </div>

                </div>

                <div class="form-row justify-content-center">

                    <div class="form-group col-md-8">
                        
                        @Html.LabelFor(x => x.Description, "Descrição")
                        @Html.TextAreaFor(x => x.Description, new
                        {
                            @class = "form-control",
                            rows = 3
                        })
                        
                    </div>

                </div>

                <div class="col d-flex justify-content-center">
                    <button class="btn btn-dark" type="submit"> Cadastrar </button>
                </div>
            }

        </div>

        <div class="row mt-5">


        </div>

    </div>

</div>