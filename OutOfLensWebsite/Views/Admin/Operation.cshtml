@model TableViewModel

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<script type="text/javascript" src="~/js/admin-script.js"></script>

<div id="notification-div" class="alert alert-primary fixed-alert">
    OwO
</div>

<div class="container-fluid">

    <button type="button" id="sidebarCollapse" class="btn btn-dark mt-3">
        <i class="fas fa-align-left"></i>
        <span> Menu </span>
    </button>


    <div class="row pl-5" style="margin-top:4rem;">

        <div class="col-2" style="color:#999">
            <p> Operação </p>
        </div>

    </div>

    <div class="row d-flex justify-content-center text-center">


        <div class="col-12">
            <h2> Operação </h2>
            <p class="px-3" style="margin-top:2rem;"> Registre pedidos com os clientes da Out Of Lens através de um menu conciso e intuitivo </p>
        </div>

    </div>

    <hr style="width:90%; margin-top:5rem;">

    <div class="row d-flex justify-content-center" style="margin-top:4rem;">

        <div class="dropdown">
            <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="border:rgba(0, 0, 0, 0.2) 1px solid; padding-right:10px">
                <span style="padding-right:30px;"> Selecione aqui o que deve ser Operado </span>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#"> Fechar Pedido </a>
                <a class="dropdown-item" href="#"> Gerenciar Funcionário </a>
            </div>
        </div>

    </div>

    <div class="row d-flex justify-content-center mb-4" style="margin-top:3rem;">

        <div class="col-3">

            <h5 class="text-center my-3"> Gerenciamento de Entrada / Saída de Funcionário </h5>

        </div>

    </div>

    <div class="row d-flex justify-content-center mt-5 mb-5">

        <div class="col-7">
        
                
                @await Html.PartialAsync("Render/Table", Model)

        </div>

    </div>

</div>