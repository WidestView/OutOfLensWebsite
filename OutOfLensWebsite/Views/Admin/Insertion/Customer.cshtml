@model string

@{
    ViewBag.Title = "Cadastro";
    Layout = "_AdminLayout";
}


<div id="content" style="width:100%;">


    <div class="container-fluid">

        @await Html.PartialAsync("Insertion/_Start")



        <div class="row d-flex justify-content-center mb-4" style="margin-top:3rem;">

            <div class="col-3">

                <h5 class="text-center my-3"> Informações do Cliente </h5>

            </div>

        </div>

        <div class="row d-flex justify-content-center pl-5">

            <form class="text-justify col-9 pr-5">

                <div class="form-row">

                    <div class="form-group col-md-3 col-sm-12">
                        <label for="inputNome"> Nome </label>
                        <input type="text" class="form-control" id="inputNome">
                    </div>
                    <div class="form-group col-md-3 col-sm-12">
                        <label for="inputNomeSoc"> Nome Social </label>
                        <input type="text" class="form-control" id="inputNomeSoc">
                    </div>
                    <div class="form-group col-md-2 col-sm-12">
                        <label for="inputSexo"> Sexo </label>
                        <select id="inputSexo" class="form-control">
                            <option selected>Não Informar</option>
                            <option>Feminino</option>
                            <option>Masculino</option>
                        </select>
                    </div>
                    <div class="form-group col-md-2 col-sm-3">
                        <label for="inputCPF"> CPF </label>
                        <input type="text" class="form-control" id="inputCPF">
                    </div>
                    <div class="form-group col-md-2 col-sm-3">
                        <label for="inputRG"> RG </label>
                        <input type="text" class="form-control" id="inputRG">
                    </div>

                </div>

                <div class="form-row">

                    <div class="form-group col-md-2 col-sm-12">
                        <label for="inputData"> Dt. Nascimento </label>
                        <input type="date" class="form-control" id="inputData">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputTel"> Telefone </label>
                        <input type="text" class="form-control" id="inputTel">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputCel"> Celular </label>
                        <input type="text" class="form-control" id="inputCel">
                    </div>
                    <div class="form-group col-md-3 col-sm-12">
                        <label for="inputEmail"> Email </label>
                        <input type="email" class="form-control" id="inputEmail">
                    </div>
                    <div class="form-group col-md-3 col-sm-12">
                        <label for="inputSenha"> Senha </label>
                        <input type="password" class="form-control" id="inputSenha">
                    </div>

                </div>

            </form>

        </div>

        <div class="row mt-5">

            <div class="col d-flex justify-content-center">
                <button class="btn btn-dark"> Cadastrar </button>
            </div>

        </div>

    </div>

</div>