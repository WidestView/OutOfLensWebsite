@model string

@{
    ViewBag.Title = "Cadastro";
    Layout = "_AdminLayout";
}

<div id="content" style="width:100%;">


    <div class="container-fluid">

        @await Html.PartialAsync("Insertion/_Start")


        <div class="row d-flex justify-content-center mb-4" style="margin-top:3rem;">

            <div class="col-3">

                <h5 class="text-center my-3"> Informações do Tipo de Pacote </h5>

            </div>

        </div>

        <div class="row d-flex">

            <form class="text-justify col-12">

                <div class="form-row justify-content-center">

                    <div class="form-group col-md-4 col-sm-12">
                        <label for="inputNome"> Nome </label>
                        <input type="text" class="form-control" id="inputNome">
                    </div>

                </div>

                <div class="form-row justify-content-center">

                    <div class="form-group col-md-4">
                        <label for="inputDesc"> Descrição </label>
                        <textarea class="form-control" id="inputDesc" rows="3"></textarea>
                    </div>

                </div>

            </form>

        </div>

        <div class="row mt-5">

            <div class="col d-flex justify-content-center">
                <button class="btn btn-dark"> Cadastrar </button>
            </div>

        </div>

    </div>

</div>
