
@{
    ViewData["Title"] = "Session";
}

<div id="content" style="width:100%">

    <div class="container-fluid">

        <div class="row d-flex justify-content-center mb-4" style="margin-top:3rem;">

            <div class="col-3">

                <h5 class="text-center my-3"> Registro de Sessão </h5>

            </div>

        </div>

        <div class="row d-flex justify-content-center">

            <form class="text-justify col-10">

                <div class="form-row justify-content-center">

                    <div class="form-group col-md-3 col-sm-12">
                        <label for="inputPedido"> Pedido </label>
                        <select id="inputPedido" class="form-control">
                            <option selected> Pedido 1 </option>
                            <option> Pedido 2 </option>
                            <option> Pedido 3 </option>
                        </select>
                    </div>
                    <div class="form-group col-md-4 col-sm-12">
                        <label for="inputEnd"> Endereço </label>
                        <input type="text" class="form-control" id="inputEnd">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputHoraIni"> Horário de Início </label>
                        <input type="time" class="form-control" id="inputHoraIni">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputHoraFin"> Horário de Início </label>
                        <input type="time" class="form-control" id="inputHoraFin">
                    </div>

                </div>

                <div class="form-row justify-content-center">

                    <div class="form-group col-md-8">
                        <label for="inputDesc"> Descrição </label>
                        <textarea class="form-control" id="inputDesc" rows="3"></textarea>
                    </div>

                </div>

            </form>

        </div>

        <div class="row mt-5">

            <div class="col d-flex justify-content-center">
                <button class="btn btn-dark"> Cadastrar </button>
            </div>

        </div>

    </div>

</div>

