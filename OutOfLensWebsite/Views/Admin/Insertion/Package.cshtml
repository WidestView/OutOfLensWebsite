@model string

@{
    ViewBag.Title = "Cadastro";
    Layout = "_AdminLayout";
}

<div id="content" style="width:100%;">


    <div class="container-fluid">

        @await Html.PartialAsync("Insertion/_Start")

        <div class="row d-flex justify-content-center mb-4" style="margin-top:3rem;">

            <div class="col-3">

                <h5 class="text-center my-3"> Informações do Pacote </h5>

            </div>

        </div>

        <div class="row d-flex justify-content-center">

            <form class="text-justify col-9">

                <div class="form-row justify-content-center">

                    <div class="form-group col-md-2 col-sm-12">
                        <label for="inputSexo"> Tipo Pacote </label>
                        <select id="inputSexo" class="form-control">
                            <option selected> Pacote 1 </option>
                            <option> Pacote 2 </option>
                            <option> Pacote 3 </option>
                        </select>
                    </div>
                    <div class="form-group col-md-2 col-sm-12">
                        <label for="inputNomeSoc"> Qualidade </label>
                        <input type="text" class="form-control" id="inputNomeSoc">
                    </div>
                    <div class="form-group col-md-2 col-sm-3">
                        <label for="inputQtd"> Quantidade </label>
                        <input type="number" class="form-control" id="inputQtd" min="1" step="1">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputAlt"> Altura das fotos </label>
                        <input type="number" class="form-control" id="inputAlt" min="1" step=".50">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputLarg"> Largura das fotos </label>
                        <input type="number" class="form-control" id="inputLarg" min="1" step=".50">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputVal"> Valor </label>
                        <input type="number" class="form-control" id="inputVal" min="1" step=".50">
                    </div>

                </div>

                <div class="form-row justify-content-center">

                    <div class="form-group col-md-10">
                        <label for="inputObs"> Observação </label>
                        <textarea class="form-control" id="inputObs" rows="3"></textarea>
                    </div>

                </div>

            </form>

        </div>

        <div class="row mt-5">

            <div class="col d-flex justify-content-center">
                <button class="btn btn-dark"> Cadastrar </button>
            </div>

        </div>

    </div>

</div>
