@model Employee

@{
    ViewBag.Title = "Cadastro";
    Layout = "_AdminLayout";
}

<div id="content" style="width:100%;">


    <div class="container-fluid">

        @await Html.PartialAsync("Insertion/_Start")

        
        <div class="row d-flex justify-content-center mb-4" style="margin-top:3rem;">

            <div class="col-3">

                <h5 class="text-center my-3"> Informações do Funcionário </h5>

            </div>

        </div>

        <div class="row d-flex justify-content-center pl-5">

            @using (Html.BeginForm("AddEmployee", "Admin"))
            {
                    <div class="form-row">

                        <div class="form-group col-md-3 col-sm-12">
                            @Html.LabelFor(x => x.Name, "Nome")
                            @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
                        </div>
                        
                        <div class="form-group col-md-3 col-sm-12">
                            @Html.LabelFor(x => x.SocialName, "Nome Social")
                            @Html.TextBoxFor(x => x.SocialName, new {@class = "form-control"})
                        </div>
                        
                        <div class="form-group col-md-2 col-sm-12">
                        
                            @Html.LabelFor(x => x.Gender, "Gênero")
                            
                            @Html.DropDownListFor(x => x.Gender, new []
                            {
                                new SelectListItem("Não Informar", null), 
                                new SelectListItem("Feminino", "F"), 
                                new SelectListItem("Masculino", "M")
                            },new {@class = "form-control"})
                            
                          
                        </div>
                        <div class="form-group col-md-2 col-sm-3">
                            @Html.LabelFor(x => x.Cpf, "CPF")
                            @Html.TextBoxFor(x => x.Cpf, new {@class = "form-control"})
                        </div>
                        <div class="form-group col-md-2 col-sm-3">
                            @Html.LabelFor(x => x.Rg, "RG")
                            @Html.TextBoxFor(x => x.Rg, new {@class = "form-control"})
                        </div>

                    </div>

                    <div class="form-row">

                        <div class="form-group col-md-2 col-sm-12">
                            @Html.LabelFor(x => x.BirthDate, "Data de Nascimento")
                            @Html.TextBoxFor(x => x.BirthDate, new {@class = "form-control"})
                        </div>
                        <div class="form-group col-md-2">
                            @Html.LabelFor(x => x.Phone, "Telefone")
                            @Html.TextBoxFor(x => x.Phone, new {@class = "form-control"})
                        </div>
                        <div class="form-group col-md-2">
                            @Html.LabelFor(x => x.Cellphone, "Celular")
                            @Html.TextBoxFor(x => x.Cellphone, new {@class = "form-control"})
                        </div>
                        <div class="form-group col-md-3 col-sm-12">
                            @Html.LabelFor(x => x.Email, "Email")
                            @Html.TextBoxFor(x => x.Email, new {@class = "form-control"})
                        </div>
                        <div class="form-group col-md-3 col-sm-12">
                            @Html.LabelFor(x => x.Password, "Senha")
                            @Html.TextBoxFor(x => x.Password, new {@class = "form-control", type="password"})
                        </div>

                    </div>

                    <div class="form-row justify-content-center">

                        <div class="form-group col-md-2 com-sm-12">
                            @Html.LabelFor(x => x.AccessLevel, "Nivel de Acesso")
                            @Html.TextBoxFor(x => x.AccessLevel, new {@class = "form-control", type = "number"})
                        </div>

                        <div class="form-group col-md-2 com-sm-12">
                            @Html.LabelFor(x => x.Rfid, "RFID")
                            @Html.TextBoxFor(x => x.Rfid, new {@class = "form-control"})
                        </div>

                    </div>
             <div class="col d-flex justify-content-center">
                <button class="btn btn-dark" type="submit"> Cadastrar </button>
                </div>

            }

        </div>

        <div class="row mt-5">

       
        </div>

    </div>

</div>

