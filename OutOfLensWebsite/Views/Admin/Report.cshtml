@model string

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}


<div class="container-fluid">

    <button type="button" id="sidebarCollapse" class="btn btn-dark mt-3">
        <i class="fas fa-align-left"></i>
        <span> Menu </span>
    </button>

    <div class="row pl-5" style="margin-top:4rem;">

        <div class="col-1" style="color:#999">
            <p> Relatórios </p>
        </div>

    </div>

    <div class="row d-flex justify-content-center text-center">


        <div class="col-12">
            <h2> Relatórios </h2>
            <p class="px-3" style="margin-top:2rem;">
                Matenha sua equipe informada dos ultimos relatos e acontecimentos dentro do ambiente de trabalho! Selecione a identificação,
                o dia e descreva a mais nova atualização.
            </p>
        </div>

    </div>

    <hr style="width:90%; margin-top:5rem;">

    <div class="row d-flex justify-content-center mb-4" style="margin-top:4rem;">

        <div class="col-3">

            <h5 class="text-center my-3"> Informações do Relatório </h5>

        </div>

    </div>

    <div class="row d-flex justify-content-center" style="margin-top:3rem;">

        <form class="col-12">

            <div class="form-row d-flex justify-content-center">

                <div class="form-group col-md-2 col-sm-9">
                    <label for="inputPedido"> Pedido </label>
                    <select id="inputPedido" class="form-control">
                        <option selected> ... </option>
                        <option> Pedido 1 </option>
                        <option> Pedido 2 </option>
                    </select>
                </div>
                <div class="form-group col-md-2 col-sm-9">
                    <label for="inputSes"> Sessão </label>
                    <select id="inputSes" class="form-control">
                        <option selected> ... </option>
                        <option> Sessão 1 </option>
                        <option> Sessão 2 </option>
                    </select>
                </div>
                <div class="form-group col-md-2 col-sm-9">
                    <label for="inputFunc"> Funcionário </label>
                    <select id="inputFunc" class="form-control">
                        <option selected> ... </option>
                        <option> Funcionário 1 </option>
                        <option> Funcionário 2 </option>
                    </select>
                </div>
                <div class="form-group col-md-2 col-sm-12">
                    <label for="inputData"> Data </label>
                    <input type="date" class="form-control" id="inputData">
                </div>


            </div>

            <div class="form-row d-flex justify-content-center">

                <div class="form-group col-md-8">
                    <label for="inputDesc"> Descrição </label>
                    <textarea class="form-control" id="inputDesc" rows="3"></textarea>
                </div>

            </div>

        </form>

    </div>

    <div class="row mt-5">

        <div class="col d-flex justify-content-center">
            <button class="btn btn-dark"> Cadastrar </button>
        </div>

    </div>

</div>