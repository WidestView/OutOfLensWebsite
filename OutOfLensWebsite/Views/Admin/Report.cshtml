@using OutOfLensWebsite.Models.Data
@model OutOfLensWebsite.Models.Data.Report

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";

    var connection = new DatabaseConnection();
}




<div class="container-fluid">

    <button type="button" id="sidebarCollapse" class="btn btn-dark mt-3">
        <i class="fas fa-align-left"></i>
        <span> Menu </span>
    </button>

    <div class="row pl-5" style="margin-top:4rem;">

        <div class="col-1" style="color:#999">
            <p> Relatórios </p>
        </div>

    </div>

    <div class="row d-flex justify-content-center text-center">


        <div class="col-12">
            <h2> Relatórios </h2>
            <p class="px-3" style="margin-top:2rem;">
                Matenha sua equipe informada dos ultimos relatos e acontecimentos dentro do ambiente de trabalho! Selecione a identificação,
                o dia e descreva a mais nova atualização.
            </p>
        </div>

    </div>

    <hr style="width:90%; margin-top:5rem;">

    <div class="row d-flex justify-content-center mb-4" style="margin-top:4rem;">

        <div class="col-3">

            <h5 class="text-center my-3"> Informações do Relatório </h5>

        </div>

    </div>

    <div class="row d-flex justify-content-center" style="margin-top:3rem;">

            @using (Html.BeginForm("AddReport", "Admin", FormMethod.Post, new
            {
                @class = "col-12"
            }))
            {

                <div class="form-row d-flex justify-content-center">

                    <div class="form-group col-md-2 col-sm-9">
                        
                        @Html.LabelFor(x => x.Order.Identifier, "Código do Pedido")
                        @Html.DropDownListFor(x => x.Order.Identifier, Order.ListItems(connection),
                            new  { @class = "form-control"})

                    </div>
                    <div class="form-group col-md-2 col-sm-9">
                        
                        @Html.LabelFor(x => x.Session.Identifier, "Código da Sessão")
                        @Html.DropDownListFor(x => x.Session.Identifier, Session.ListItems(connection),
                            new {@class = "form-control"})
                    </div>
                    <div class="form-group col-md-2 col-sm-9">
                        
                        @Html.LabelFor(x => x.Employee.Identifier, "Funcionário")
                        @Html.DropDownListFor(x => x.Employee.Identifier, Employee.ListItems(connection),
                            new {@class = "form-control"})
                    </div>
                    
                    <div class="form-group col-md-2 col-sm-12">
                        
                        @Html.LabelFor(x => x.Date, "Data")
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control", type="date"})
                        
                    </div>



                </div>

                <div class="form-row d-flex justify-content-center">

                    <div class="form-group col-md-8">
                        
                        @Html.LabelFor(x => x.Description, "Descrição")
                        @Html.TextAreaFor(x => x.Description, new
                        {
                            @class = "form-control",
                            rows = "3"
                        })
                    </div>

                </div>
                
                <div class="col d-flex justify-content-center">
                    <button class="btn btn-dark" type="submit"> Cadastrar </button>
                </div>
            }

    </div>

    <div class="row mt-5">

    

    </div>

</div>